spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true
      routes:
        - id: CODER-SERVICE
          uri: lb://CODER-SERVICE/
          predicates:
            - Path=/coder/**
        - id: QUERIES-SERVICE
          uri: lb://QUERIES-SERVICE
          predicates:
            - Path=/queries/**
            - Path=/queryLanguageType/**
  server:
    port: 8762
  eureka:
    client:
      serviceUrl:
        defaultZone: http://localhost:8761/eureka/
      register-with-eureka: true
      fetch-registry: true
